{
  "name": "bash-base",
  "version": "2.1.2",
  "description": "A common lib for creating bash script easily.",
  "private": true,
  "files": [
    "bash-base.sh",
    "bash-base.test.sh"
  ],
  "bin": {
    "bash-base": "./bash-base.sh",
    "bash-base.test.sh": "./bash-base.test.sh"
  },
  "scripts": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhang-hongjie/bash-base.git"
  },
  "keywords": [
    "bash"
  ],
  "author": "Hongjie ZHANG (hongjie.zhang@renault.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zhang-hongjie/bash-base/issues"
  },
  "homepage": "https://github.com/zhang-hongjie/bash-base#readme",
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^4.2.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && node_modules/.bin/git-cz --hook || true"
    }
  },
  "dependencies": {}
}
